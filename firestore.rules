rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- REGLAS DE DEPURACIÃ“N INSEGURAS ---
    // Permite que cualquier usuario autenticado lea y escriba en toda la base de datos.
    // Usar solo para pruebas.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
