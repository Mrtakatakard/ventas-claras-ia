rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
       return isAuthenticated() && 
         (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superAdmin']);
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isDocOwner() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    function isValidCreate() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    function isValidUpdate() {
      return isDocOwner() && request.resource.data.userId == request.auth.uid;
    }

    // Users: Users manage their own profile; Admins can manage all.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Data Collections: Strict Owner/Admin access
    match /clients/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }

    match /clientTypes/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }

    match /categories/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }

    match /products/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }
    
    // Legacy support if used, though Batches are likely inside Products now
    match /productBatches/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }

    match /invoices/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }

    match /quotes/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }

    match /payments/{docId} {
      allow read: if isDocOwner() || isAdmin();
      allow create: if isValidCreate();
      allow update: if isValidUpdate();
      allow delete: if isDocOwner() || isAdmin();
    }
    
    // Counters: Read-only for clients, assuming backend management or pre-seeded
    match /counters/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend admin SDK can write
    }

    match /cacheSugerencias/{docId} {
      allow read, write: if true; // Allow server (and everyone) to write cache for now to bypass Auth issues
    }
    
    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
